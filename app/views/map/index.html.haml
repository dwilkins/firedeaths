%h1 Firefall the Game - Death Toll by Base

#weapons
  .row-header Deadly Weapons
  %form{class: 'form-inline'}
    .navbar
      .navbar-inner
        .container
          #weapons-detail
            %a{class: "btn btn-navbar", "data-toggle" => "collapse", "data-target" => ".nav-collapse-weapons"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            .nav-collapse.nav-collapse-weapons.collapse
              - if @static_data[:weapons]
                %label{class: "checkbox inline", for: "weapons-all"}
                  %input{type: "checkbox", class: "weapons-all-cb", name: "weapons-all", value: "All", checked: "checked", id: "weapons-all"}
                  All
                - @static_data[:weapons].each do |w|
                  %label{class: "checkbox inline", for: "w_#{w.id}"}
                    %input{type: "checkbox", class: "weapons-cb", name: "wn_#{w.id}", value: "#{w.id}", checked: "checked", id: "w_#{w.id}"}
                    #{w.name}

